pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Generate Diff') {
            steps {
                script {
                    sh """
                    git fetch origin main
                    git diff origin/main..HEAD > diff_output.txt
                    """
                }
            }
        }
        stage('Send Email') {
            steps {
                script {
                    def diff = readFile('diff_output.txt')
		    // Extract PR information (assuming Jenkins GitHub plugin is used)
                    def prLink = env.CHANGE_URL ?: "N/A"  // Jenkins provides this if PR triggers the build
                    emailext (
                        subject: "Pull Request Diff",
                        body: """
                        The following changes are part of this pull request:

                        ${diff}

                        Review and approve the pull request here: ${prLink}
                        """,
                        to: 'rahul.ambarakonda.com'
                    )
                }
            }
        }
    }
}

